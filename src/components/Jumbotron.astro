---
import { Image } from 'astro:assets';
import Section from '@/components/Section.astro';
import HighlightHeader from '@/components/HighlightHeader.astro';

type Props = {
    image: ImageMetadata;
    title: string;
};

const { image, title } = Astro.props;
---

<Section isFluid>

    <div class="jumbotron position-relative ratio" style="--bs-aspect-ratio: 61%;">

        <div class="text-center">

            <Image
                src={image}
                alt="A group of people at a skatepark watching a skate competition"
                class="img-fluid position-absolute top-0 start-0 end-0 bottom-0"
                loading="eager"
                widths={[300, 1060, 1460, 1780, 2048, 2279]}
                sizes="(min-width: 2420px) 2279px, calc(94.24vw + 17px)"
            />

            <HighlightHeader class="fs-5 lh-1 position-relative top-50">
                {title}
            </HighlightHeader>

        </div>

    </div>

</Section>
