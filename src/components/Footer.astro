---
import type { Link } from '@/types/links';
import { Image } from 'astro:assets';

type Props = {
    links: Link[];
};

import imgLogoWhite from '@/assets/logo-the-mini-ramp-foundation-white.png';

const { links } = Astro.props;
---
<footer class="bg-black text-white mt-5 bg-black">

	<div class="container p-4 p-md-5">

		<div class="d-md-flex justify-content-between text-center text-md-start">

			<div class="text-white-75">

				<Image
					src={imgLogoWhite}
					alt=""
					width="230"
					height="50"
				/>

				<p class="mt-3 mt-md-4 small">
					Registered 501(C)(3). EIN: XX-XXXXXXX
				</p>

			</div>

			<ul class="list-unstyled">
				{links.map(({ url, label }) => {
					return (
						<li class="mb-2">
							<a
								href={url}
								class="link-light"
							>
								{label}
							</a>
						</li>
					);
				})}
			</ul>

		</div>

		<p class="small text-end">
			&copy;2023 The Mini Ramp Foundation. All Rights Reserved.
		</p>

	</div>

</footer>
