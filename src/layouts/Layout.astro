---
import '@fontsource-variable/rubik';

import { Image } from 'astro:assets';

import '@/styles/index.scss';

import imgLogo from '@/assets/logo-the-mini-ramp-foundation.png';
import imgLogoWhite from '@/assets/logo-the-mini-ramp-foundation-white.png';

const TITLE = 'The Mini Ramp Foundation';

const links = [
	{
		url: '#mission',
		label: 'Mission'
	},
	{
		url: '#donate',
		label: 'Donate'
	},
	{
		url: '#contact',
		label: 'Contact'
	},
];
---
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
	<head>
		<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="darkreader-lock" />
        <meta name="generator" content={Astro.generator} />
        <title>{TITLE}</title>
	</head>
	<body>

        <nav class="navbar navbar-expand-lg py-3">
			<div class="container">
                <a href="/" class="navbar-brand font-monospace">
                    <Image
                        src={imgLogo}
                        alt={TITLE}
                        width="230"
                        height="50"
                    />
                </a>
				<div class="text-end text-md-start">
					<ul class="navbar-nav ms-auto">
						{links.map(({ url, label }) => {
							return (
								<li class="nav-item ms-4">
									<a href={url}>{label}</a>
								</li>
							);
						})}
					</ul>
				</div>
			</div>
		</nav>

        <slot />

		<footer class="bg-black text-white mt-5">

			<div class="container p-4 p-md-5">

				<div class="d-md-flex justify-content-between text-center text-md-start">

					<div class="text-white-75">

						<Image
							src={imgLogoWhite}
							alt={TITLE}
							width="230"
							height="50"
						/>

						<p class="mt-3 mt-md-4 small">
							Registered 501(C)(3). EIN: XX-XXXXXXX
						</p>

					</div>

					<ul class="list-unstyled">
						{links.map(({ url, label }) => {
							return (
								<li class="mb-2">
									<a
										href={url}
										class="link-light"
									>
										{label}
									</a>
								</li>
							);
						})}
					</ul>

				</div>

				<p class="small text-end">
					&copy;2023 The Mini Ramp Foundation. All Rights Reserved.
				</p>

			</div>

		</footer>

	</body>
</html>
